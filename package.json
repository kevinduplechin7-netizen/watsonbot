{
  "name": "watson-bot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Watson \u2014 Telegram group historian bot (command-based)",
  "main": "index.mjs",
  "scripts": {
    "start": "node index.mjs",
    "start:pm2": "pm2 start index.mjs --name watson --time --update-env",
    "stop:pm2": "pm2 stop watson",
    "restart:pm2": "pm2 restart watson --update-env",
    "logs:pm2": "pm2 logs watson"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "telegraf": "^4.16.3"
  }
}